{
  "compilerOptions": {
    "outDir": "./dist/out-tsc", // Standard Angular Ausgabeordner
    "target": "ES2022", // Zielversion von JavaScript
    "module": "ES2022", // ES Module
    "esModuleInterop": true, // Unterstützung für ES-Module mit CommonJS
    "moduleResolution": "node", // Node.js Modulauflösung
    "strict": true, // Strikte Typisierung
    "skipLibCheck": true, // Überspringe Bibliotheksprüfungen
    "noImplicitAny": true, // Verhindert 'any' Typ
    "experimentalDecorators": true, // Unterstützung für Dekoratoren
    "emitDecoratorMetadata": true, // Dekorator-Metadaten ausgeben
    "typeRoots": ["node_modules/@types"]
  },
  "angularCompilerOptions": {
    "strictTemplates": true // Strikte Template-Überprüfung in Angular
  },
  "include": [
    "src/**/*.ts", // Alle TypeScript-Dateien im 'src'-Verzeichnis
    "src/**/*.d.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules" // Exkludiere 'node_modules'-Ordner
  ]
}
